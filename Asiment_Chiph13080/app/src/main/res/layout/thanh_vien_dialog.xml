<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdM"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/bufont"
        android:textSize="20sp"
        android:textColorHint="@color/bufont"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/etNameM"
            android:hint="Member's name"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textColorHint="@color/bafont"
            android:textColor="@color/bafont"
            android:textSize="20sp"
            android:backgroundTint="@color/background"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year of birth"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textColor="@color/bafont"
            android:textSize="20sp"
            android:inputType="number"
            android:maxLength="4"
            android:backgroundTint="@color/background"
            android:textColorHint="@color/bafont"
            android:id="@+id/etBirthM"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveM"
            android:text="Save"
            android:textColor="@color/bufont"
            android:textSize="20sp"
            android:backgroundTint="@color/button"
         />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCacelM"
            android:text="Cancel"
            android:textColor="@color/bufont"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/button"/>


    </LinearLayout>
</LinearLayout>