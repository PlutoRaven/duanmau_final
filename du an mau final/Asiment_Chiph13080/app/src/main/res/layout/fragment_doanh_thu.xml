<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frament.DoanhThuFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="70dp">
        <ImageView
            android:src="@drawable/date"
            android:background="@drawable/border"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Từ Ngày"
            android:id="@+id/btnTuNgay"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ngày Mở Đầu"
            android:layout_weight="2"
            android:textSize="18dp"
            android:id="@+id/edTuNgay"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <ImageView
            android:src="@drawable/date"
            android:background="@drawable/border"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Đến Ngày"
            android:id="@+id/btnDenNgay"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Ngày Kết Thúc"
            android:id="@+id/edDenNgay"
            android:textSize="18dp"
            />
    </LinearLayout>
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Doanh Thu"
        android:id="@+id/btnDoanhThu"
        android:gravity="center"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="20dp"/>

    <TextView
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:text="Doanh Thu"

        android:id="@+id/tvDoanhThu"/>

</LinearLayout>